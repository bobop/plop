<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start at</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start_at %></td>
        <td><%= event.slug %></td>
        <td><%= link_to 'Show', school_program_event_path(@school, @program, event) %></td>
        <td><%= link_to 'Edit', edit_school_program_event_path(@school, @program, event) %></td>
        <td><%= link_to 'Destroy', school_program_event_path(@school, @program, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


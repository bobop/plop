<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Contact name</th>
      <th>Contact phone</th>
      <th>Contact email</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.description %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.contact_name %></td>
        <td><%= supplier.contact_phone %></td>
        <td><%= supplier.contact_email %></td>
        <td><%= supplier.slug %></td>
        <td><%= link_to 'Show', school_supplier_path(@school, supplier) %></td>
        <td><%= link_to 'Edit', edit_school_supplier_path(@school, supplier) %></td>
        <td><%= link_to 'Destroy', school_supplier_path(@school, supplier), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


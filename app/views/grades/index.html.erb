<div class="grid-x">
  <div class="cell medium-10 medium-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Grades</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @grades.each do |grade| %>
          <tr>
            <td><%= grade.name %></td>
            <td><%= grade.slug %></td>
            <td><%= link_to 'Show', school_grade_path(@school, grade) %></td>
            <td><%= link_to 'Edit', edit_school_grade_path(@school, grade) %></td>
            <td><%= link_to 'Destroy', school_grade_path(@school, grade), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Grade', new_school_grade_path %>
  </div>
</div>

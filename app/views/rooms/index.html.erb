<div class="grid-x">
  <div class="cell medium-10 medium-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Rooms</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.name %></td>
            <td><%= room.slug %></td>
            <td><%= link_to 'Show', school_room_path(@school, room) %></td>
            <td><%= link_to 'Edit', edit_school_room_path(@school, room) %></td>
            <td><%= link_to 'Destroy', school_room_path(@school, room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Room', new_school_room_path %>
  </div>
</div>

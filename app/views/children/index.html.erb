<div class="grid-x">
  <div class="cell medium-10 medium-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Children</h1>

    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Division</th>
          <th>Grade</th>
          <th>Room</th>
          <th>Allergies</th>
          <th>Dietry requirements</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @children.each do |child| %>
          <tr>
            <td><%= child.first_name %></td>
            <td><%= child.last_name %></td>
            <td><%= child.division.try(:name) %></td>
            <td><%= child.grade.try(:name) %></td>
            <td><%= child.room.try(:name) %></td>
            <td><%= child.allergies %></td>
            <td><%= child.dietry_requirements %></td>
            <td><%= link_to 'Show', child %></td>
            <td><%= link_to 'Edit', edit_child_path(child) %></td>
            <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Child', new_child_path %>
</div>
</div>
